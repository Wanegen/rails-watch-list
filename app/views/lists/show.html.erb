<div class="h-100 d-flex flex-column align-items-center justify-content-center text-center mt-5">
  <h1 class="mb-5"><%= @movie.title %></h1>
<div class="d-flex w-auto align-items-center justify-content-center m-5">
  <div class="w-40">
    <%= image_tag("#{@movie.poster_url}", class: "img-thumbnail", style: 'width:300px;max-width:300px;min-width:300px') %>
  </div>
  <div class="p-5">
    <h5>The overview :</h5>
    <h3 class="mb-5"><%= @movie.overview %></h3>
    <h5>Rating :</h5>
    <h3 class="mb-5"><%= @movie.rating %>/10</h3>
  </div>
</div>

  <%= link_to "Back to movies", root_path, class:"btn btn-primary mt-4" %>

</div>
